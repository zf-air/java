package collection;

import java.util.*;

public class ArrayList_demo {
	public static void main(String[] args) {
		ArrayList<String> arr = new ArrayList<String>();
		arr.add("hello");
		arr.add("world");
		arr.add("java");
		
		arr.remove("java");
		// 1.µü´úÆ÷±éÀú
		Iterator it = arr.iterator();
		while (it.hasNext()) {
			String s = (String) it.next();
			System.out.println(s);
		}
		System.out.println("------------");

		// 2.for ±éÀú
		for (String s : arr) {
			System.out.println(s);
		}
		System.out.println("------------");
		
		
	}
}
